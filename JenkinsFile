pipeline {
    agent any

    stages {
		stage('Checkout Fork') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/StefanyDimova/SEDO_Regular-Exam-3.git'
                    ]]
                ])
            }
        }	
		stage('Restore the application') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Build the Horizons application') {
            steps {
                bat 'dotnet build --no-restore'
            }
        }
        stage('Test unit and integration tests') {
            steps {
                bat 'dotnet test --no-build --verbosity normal'
            }
        }
    }
}